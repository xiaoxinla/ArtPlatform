<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv_fans_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:padding="7dp"
        android:src="@drawable/ic_contact_picture" />

   	<TextView
   	    android:id="@+id/tv_fans_name"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/iv_fans_avatar"
   	    android:layout_marginBottom="20dp"
   	    android:layout_toRightOf="@+id/iv_fans_avatar"
   	    android:gravity="center"
   	    android:text="我是名字"
   	    android:textColor="#2e2e2e"
   	    android:textSize="20sp" />

   	<TextView
   	    android:id="@+id/tv_fans_info"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBottom="@+id/iv_fans_avatar"
        android:textColor="#C2C2C2"
   	    android:layout_alignLeft="@+id/tv_fans_name"
   	    android:text="我是职业和地区" />

   	<TextView
   	    android:id="@+id/tv_fans_operation"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/tv_fans_info"
        android:textColor="#445bc8"
   	    android:layout_alignParentRight="true"
   	    android:layout_marginRight="24dp"
   	    android:clickable="true"
   	    android:textSize="15sp"
   	    android:text="我是操作" />

</RelativeLayout>
