<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.gexin.artplatform.view.TitleBar
        android:id="@+id/tb_home_item_info"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#445bc8"
        custom:titleColor="#ffffff"
        custom:titleSize="7sp"
        custom:titleText="@string/tab_homepage" >
    </com.gexin.artplatform.view.TitleBar>
    <ImageView
        android:id="@+id/iv_header_home_item_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_menu_home"
        android:scaleType="centerCrop"
        android:layout_below="@id/tb_home_item_info" />

    <TextView
        android:id="@+id/tv_name_home_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_header_home_item_info"
        android:layout_below="@id/tb_home_item_info"
        android:text="画室名"
        android:textColor="#445bc8"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_content_home_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_home_item_info"
        android:textColor="#000000"
        android:text="内容区域"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView android:id="@+id/tv_time_home_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015.05.25"
        android:textColor="#959595"
        android:layout_toRightOf="@id/iv_header_home_item_info"
        android:layout_alignBottom="@id/iv_header_home_item_info"/>
    <com.gexin.artplatform.view.FlowLayout
        android:id="@+id/fl_pics_home_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content_home_item_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
    <TextView android:id="@+id/tv_clicknum_home_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击2000次"
        android:textColor="#959595"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/fl_pics_home_item_info"/>

</RelativeLayout>
