<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d0f6f6f6"
        android:orientation="horizontal" >

        <LinearLayout android:id="@+id/ll_indicator_one_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:id="@+id/iv_indicator_icon_one_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_icon_2"/>
            <TextView android:id="@+id/tv_indicator_icon_one_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cdfe6060"
                android:textSize="15sp"
                android:text="@string/tab_homepage"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_indicator_two_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:id="@+id/iv_indicator_icon_two_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question_icon_1"/>
            <TextView android:id="@+id/tv_indicator_icon_two_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cd504f4f"
                android:textSize="15sp"
                android:text="@string/tab_question_answer"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_indicator_three_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:id="@+id/iv_indicator_icon_three_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/discover_icon_1"/>
            <TextView android:id="@+id/tv_indicator_icon_three_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cd504f4f"
                android:textSize="15sp"
                android:text="@string/tab_find"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_indicator_four_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:id="@+id/iv_indicator_icon_four_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/me_icon_1"/>
            <TextView android:id="@+id/tv_indicator_icon_four_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cd504f4f"
                android:textSize="15sp"
                android:text="@string/tab_me"/>
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>