<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <ImageView
        android:id="@+id/iv_header_home_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_home" />

    <TextView
        android:id="@+id/tv_name_home_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_header_home_item"
        android:text="画室名"
        android:singleLine="true"
        android:scaleType="centerCrop"
        android:textColor="#445bc8"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_title_home_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_home_item"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/tv_content_home_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_home_item"
        android:textColor="#000000"
        android:maxLines="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView android:id="@+id/tv_time_home_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015.05.25"
        android:textColor="#959595"
        android:layout_toRightOf="@id/iv_header_home_item"
        android:layout_alignBottom="@id/iv_header_home_item"/>
    <com.gexin.artplatform.view.FlowLayout
        android:id="@+id/fl_pics_home_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content_home_item"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />
    <TextView android:id="@+id/tv_clicknum_home_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击2000次"
        android:textColor="#959595"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/fl_pics_home_item"/>

</RelativeLayout>
