<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_header_question_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_contact_picture" />

    <TextView
        android:id="@+id/tv_name_question_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_header_question_item"
        android:text="我是用户名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_content_question_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header_question_item"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/iv_pic_question_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content_question_item"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_menu_emoticons" />

    <LinearLayout
        android:id="@+id/ll_tag_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic_question_item"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/tag_icon"/>
        <TextView
            android:id="@+id/tv_type_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:layout_marginLeft="5dp"
            android:textColor="#8a8a8a" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        android:layout_below="@id/ll_tag_question_item"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_tag_question_item"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout android:id="@+id/ll_zan_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/selector_titlebar_btn"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/zan_icon_1" />

            <TextView
                android:id="@+id/tv_zan_question_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="#8a8a8a" />
        </LinearLayout>

        <View android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#c9c9c9"/>
        
        <LinearLayout android:id="@+id/ll_ans_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/selector_titlebar_btn"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment_icon" />

            <TextView
                android:id="@+id/tv_ansnum_question_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="#8a8a8a" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_headline_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_header_question_item"
        android:layout_alignLeft="@+id/tv_name_question_item"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3小时前"
            android:textColor="#8a8a8a" />

        <TextView
            android:id="@+id/tv_commentor_question_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#445bc8"
            android:text="XXXX画室" />
    </LinearLayout>

</RelativeLayout>