<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_header_question_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_contact_picture" />

        <LinearLayout
            android:id="@+id/ll_header_question_info_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_header_question_info"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name_question_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我是用户名"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header_question_info_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_header_question_info"
            android:layout_toRightOf="@id/iv_header_question_info"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_time_question_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3小时前"
                android:textColor="#44000000" />

            <TextView
                android:id="@+id/tv_area_question_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="广东"
                android:textColor="#44000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content_question_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_header_question_info"
            android:text="测试问题内容测试问题内容测试问题内容测试问题内容测试问题内容测试问题内容" />

        <ImageView
            android:id="@+id/iv_pic_question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content_question_info"
            android:src="@drawable/ic_menu_emoticons" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_pic_question_info"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_type_question_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textColor="#44000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_menu_emoticons" />

            <TextView
                android:id="@+id/tv_count_question_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#44000000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_menu_emoticons" />

            <TextView
                android:id="@+id/tv_viewnum_question_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#44000000" />

            <ImageView
                android:id="@+id/iv_praise_question_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:src="@drawable/ic_menu_emoticons" />

            <TextView
                android:id="@+id/tv_zan_question_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#44000000" />

            <ImageView
                android:id="@+id/iv_show_question_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_menu_emoticons" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_comment_question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button android:id="@+id/btn_comment_question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"/>
    </LinearLayout>

</LinearLayout>